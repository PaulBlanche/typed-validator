{
    "compilerOptions": {
        "declaration": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
        "module":"commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "strict": true,
        "target": "ES5",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "src/**/*.test.ts"
    ]
}
